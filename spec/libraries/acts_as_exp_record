require 'rails_helper'

RSpec.describe 'acts_as_exp_record' do
  class DummyClass < ActiveRecord::Base
    def self.columns
      []
    end

    acts_as_exp_record
  end

  subject(:dummy) { DummyClass.new }
  it { is_expected.not_to be_manual_exp }
  it { is_expected.to respond_to :exp_awarded }
  it { is_expected.to respond_to :course_user }
  it { is_expected.to respond_to :acting_as }
  it { expect(dummy.acting_as).to respond_to :specific }
end
