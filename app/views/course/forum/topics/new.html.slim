= page_header

= simple_form_for @topic, url: course_forum_topics_path(current_course, @forum) do |f|
  = f.error_notification
  = f.input :title

  = f.fields_for :posts do |post|
    = post.input :text, required: false

  = f.input :topic_type, as: :select, collection: Course::Forum::Topic.topic_types.keys,
            required: true

  = f.button :submit
