= page_header
= simple_form_for @settings, url: course_admin_components_path(current_course) do |f|
  = f.error_notification message: f.object.errors.full_messages.first
  table.table.table-hover
    thead
      tr
        th = t('.name')
        th = t('.enabled')
    tbody
      = f.collection_check_boxes :enabled_component_ids,
                                 @settings.disableable_component_collection, :last, :first do |f|
        tr
          th = f.label
          td = f.check_box

  = f.button :submit, t('.button')
