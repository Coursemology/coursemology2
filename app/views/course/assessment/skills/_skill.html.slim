= content_tag_for(:tr, skill) do
  th = skill.title
  td = format_html(skill.description)
  td
    div.btn-group
      = edit_button([current_course, :assessments, skill]) if can?(:update, skill)
      = delete_button([current_course, :assessments, skill],
                      { data: { confirm: t('.destroy.confirm', title: skill.title),
                                title: skill.title } }) if can?(:destroy, skill)
