<meta name="viewport" content="width=device-width">

<body id="inner_body" class="inner_body">
<div class="fb-like" style="float: right;top:900px; position: relative" data-href="https://www.facebook.com/coursemology" data-layout="standard" data-action="like" data-show-faces="true" data-share="true"></div>
<div id="content" class="welcome_content">
  <% if flash[:notice] %>
      <div class="alert alert-info" style="position: absolute; z-index: 200">
        <%= flash[:notice] %>
      </div>
  <% end %>

  <div class="container-fluid">
    <div id="_slogen" class="_slogen">
      <p style="text-align: center;">
        <span style="font-family: arial,helvetica,sans-serif;font-size: 14px;color: #707070;">
            <%= t ".gamify_edu" %>
        </span>
      </p>
      <p style="text-align: center;">
        <span style="font-family: arial,helvetica,sans-serif;font-size: 14px;color: #707070;">
          <span>
            <%= t ".full_of_fun" %>
          </span>
        </span>
      </p>
    </div>

    <div class="_gray_background">

    </div>

    <div id="_center_image">
        <%= image_tag "teaching-wordle_316.png" %>
    </div>

    <div id="_sign_up">
    </div>

    <div id="_first_divider"></div>
    <div id="_second_divider"></div>
    <div id="_engaging_title">
      <p><span style="color: #333333;font-size: 18px;"><strong><span style="font-family: arial,helvetica,sans-serif;"><%= t '.engaging' %><br></span></strong></span></p>
    </div>
    <div id="_first_tick">
      <%= image_tag "tick.png", height: 31, width: 31, alt: "" %>
    </div>
    <div id="_second_tick">
      <%= image_tag "tick.png", height: 31, width: 31, alt:"" %>
    </div>
    <div id="_second_title">
      <p><span style="color: #333333;font-size: 18px;"><strong><span style="font-family: arial,helvetica,sans-serif;"><%= t '.general' %><br></span></strong></span></p>
    </div>

    <div id="_third_title">
      <p><span style="color: #333333;font-size: 18px;"><strong><span style="font-family: arial,helvetica,sans-serif;"><%= t '.simple' %></span></strong></span></p>
    </div>

    <div id="_third_tick">
      <%= image_tag "tick.png", height: 31, width: 31, alt: "" %>
    </div>

    <div id="_bottom_line"></div>

    <div id="_first_text_box" class="_first_text_box">
      <p><span style="color: #707070;"><%= t ".description1_1" %></span></p>
      <p><span style="color: #707070;"> </span></p>
      <p><span style="color: #707070;"><%= t ".description1_2" %> </span></p>
      <p><br><span style="font-family: arial,helvetica,sans-serif;color: #707070;font-size: small;"><br></span></p>
    </div>

    <div id="_second_text_box" class="_second_text_box">
      <p><span style="font-family: arial,helvetica,sans-serif;color: #707070;font-size: small;"><%= t ".description2_1" %></span></p>
      <p> </p>
      <p><span style="font-family: arial,helvetica,sans-serif;color: #707070;font-size: small;"><%= t ".description2_2" %></span></p>
    </div>

    <div id="_third_text_box" class="_third_text_box">
      <p><span style="font-family: arial,helvetica,sans-serif;color: #707070;font-size: small;"><%= t ".description3_1" %></span></p>
      <p><span style="font-family: arial,helvetica,sans-serif;color: #707070;font-size: small;"></span></p>
      <p><span style="font-family: arial,helvetica,sans-serif;color: #707070;font-size: small;"><%= t ".description3_2" %>/span></p>
      <p><span style="font-family: arial,helvetica,sans-serif;color: #707070;font-size: small;"> </span></p>
    </div>

    <div id="_logo">
      <%= image_tag "coursemology_logo_landscape_100.png" %>
    </div>
  </div>
</div>
</body>


